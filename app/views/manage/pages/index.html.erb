<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", manage_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "Pages", manage_pages_url %>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Manage Bages <span class="right-icon"><%= link_to "Create Page", new_manage_page_path, class: "btn" %></span>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <div class="btn-group hidden-phone">
          <%= link_to "Create a new page", new_manage_page_url, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="body">
        <table class="table table-striped table-bordered dataTable">
          <thead>
          <tr>
            <th>Title</th>
            <th>Url</th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @pages.each do |page| %>
              <tr>
                <td><%= page.title %></td>
                <td><%= link_to page_url(page), page %></td>
                <td>
                  <div class="btn-group hidden-phone">
                    <%= link_to "View", manage_page_path(page), class: "btn btn-small" %>
                    <% if current_user.admin?  %>
                        <%= link_to "Edit", edit_manage_page_path(page), class: "btn btn-info btn-small" %>
                        <%= link_to "Delete", manage_page_path(page), method: :delete, class: "btn btn-danger btn-small", data: {confirm: "Are you sure you want to delete this page"} %>
                    <% end %>
                  </div>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%#= render @posts %>
  </div>
</div>
