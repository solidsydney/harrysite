
<%= content_for(:page_title) do %>
    <%= @user.display_name.titleize %>'s Profile
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4><%= @user.display_name.titleize %>'s Profile</h4>
        	<span class="pull-right">
	    <%= link_to edit_manage_administrator_path(@user), class: "btn" do %>
	      <i class="icon-edit"></i> Edit
	    <% end %>
	  </span>
      </div>
      <div class="body">
        <div class="vcard">
          <ul>
            <li class="v-heading">
              User Details
            </li>
            <li>
              <span class="item-key">Name</span>
              <div class="vcard-item"><%= @user.display_name %></div>
            </li>
            <li>
              <span class="item-key">Email</span>
              <div class="vcard-item">
                <%= @user.email %>
              </div>
            </li>

          </ul>
        </div>
      </div>
    </div>
  </div>
</div>





