<div id="blog_show" class="row-fluid" >

  <div class="span12">

    <section>

      <header>
        <h1 style="border-bottom: none;">
          Sign In
        </h1>
      </header>

      <div  class="cover_container ">

        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>

            <% if flash.any? %>
                <% flash.each do |name, msg| %>
                    <div class="alert alert-<%= name == :notice ? "info" : "error" %>">
                      <a class="close" data-dismiss="alert">Ã—</a>
                      <%= msg %>
                    </div>
                <% end end %>
            <div class="form-inputs">
              <%= f.input :email, :required => false, :autofocus => true, input_html: {class: "span9"} %>
              <%= f.input :password, :required => false, input_html: {class: "span9"} %>
              <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Sign in" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>






    </section>
  </div>






  <%#= render "posts/sidebar" %>

</div>






