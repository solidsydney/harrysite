<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", manage_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "Categories", manage_categories_path %>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Manage Categories <span class="right-icon"><%= link_to "Add category", new_manage_category_path, class: "btn" %></span>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Categories</h4>
      </div>
      <div class="body">
        <% if @categories.empty? %>
            <p>
              No categories available yet
            </p>
        <% else %>
            <table class="table table-striped table-bordered dataTable">
              <thead>
              <tr>
                <th>Name</th>
                <th></th>
              </tr>
              </thead>
              <tbody>
              <% @categories.each do |contact| %>
                  <tr>
                    <td><%= contact.name %></td>
                    <td><%= link_to "Delete", manage_category_path(contact), data: {confirm: "Are you sure"}, class: "btn btn-danger", method: :delete %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>

        <% end %>
      </div>
    </div>
  </div>
</div>