<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", manage_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "Pages", manage_pages_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    <%= @page.title %>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="media social-box">
      <div class="header">
        <h4><%= @page.title %></h4>
      </div>
      <div class="media-body social-body">
        <div class="body">
          <p><%= raw @page.body %></p>
          <p><b>Published: <%= @page.created_at.present? ? @page.created_at.to_date.to_s(:long) : "Not Published" %></b></p>
           <div class="btn-group hidden-phone">
            <%= link_to "Add new page", new_manage_page_url, class: "btn" %>
            <% if current_user.admin? %>
                <%= link_to "Edit", edit_manage_page_path(@page), class: "btn btn-info" %>
                <%= link_to "Delete", manage_page_path(@page), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this page"} %>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>