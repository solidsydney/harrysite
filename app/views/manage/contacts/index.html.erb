<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", manage_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "Contacts", manage_contacts_path %>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Manage Contacts <span class="right-icon"><%= link_to "Import Contacts", new_manage_contact_import_path, class: "btn" %></span>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Subscribers</h4>
      </div>
      <div class="body">
        <% if @contacts.empty? %>
            <p>
              No contacts available yet
            </p>
        <% else %>
            <table class="table table-striped table-bordered dataTable">
              <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
              </tr>
              </thead>
              <tbody>
              <% @contacts.each do |contact| %>
                  <tr>
                    <td><%= contact.name %></td>
                    <td><%= contact.email %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>


            <%= will_paginate @contacts %>
        <% end %>
      </div>
    </div>
  </div>
</div>