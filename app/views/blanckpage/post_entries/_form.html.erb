<%= tinymce_assets %>
<%= simple_form_for(@post_entry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :summary %>
    <%= f.input :body, input_html: {:class => "tinymce"} %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

