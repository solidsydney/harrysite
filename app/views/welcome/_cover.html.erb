<div class="post-slider span8">
<div class="">
  <% if @mags.any? %>
      <section class="slider cover">
        <div class="flexslider">
          <ul class="slides">
            <% @mags.each do |mag| %>
            <li>

              <a href="<%= url_for mag%>">
                <%= image_tag mag.cover(:large) %>
              </a>
            </li>
            <% end %>

          </ul>
        </div>
      </section>

  <% end %>
</div>
</div>
