<article class="span4 mid">
  <div class="img">
    <%= link_to image_tag(post_entry.entry_cover(:th_new)), post_entry %>
  </div>
  <div class="info">
    <h1><%= link_to truncate(post_entry.title, length: 30, omission: ".."), [:blanckpage, post_entry], title: post_entry.title %></h1>
    <p class="details"><%= post_entry.created_at.to_date.to_s(:long)%> | <%= link_to post_entry.name, [:blanckpage, post_entry]%></p>
    <p class="text">
      <%= truncate post_entry.summary, length: 150 %>
    </p>
  </div>

</article>