

<%= content_for(:page_title) do %>
    New Administrator/Editor
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>New Administrator</h4>
      </div>
      <div class="body">

        <%= form_for(@user, url: manage_administrators_path, html: {class: "form-horizontal"}) do |f| %>
            <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from completing:</h2>
                  <ul>
                    <% @user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
<%= render "form", f: f%>
        <% end %>
      </div>
    </div>
  </div>
</div>

