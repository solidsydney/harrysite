<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", manage_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "Blog posts", manage_issues_path %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    <%= @issue.title %>
<% end %>


<div class="row-fluid">
  <div class="offset2 span8">
    <div class="media social-box">
      <div class="header">
        <h4><%= @issue.title %></h4>
      </div>
      <div class="media-body social-body">
        <% if @issue.cover.present? %>
            <div class="social-share-image" style="text-align: center">
              <%= image_tag @issue.cover(:large) %>
            </div>
        <% end %>
        <div class="body">
              <%= simple_format @issue.description %>
          <p><b>Published: <%= @issue.publish_on.to_date.to_s(:long) %></b></p>

          <div class="btn-group hidden-phone">
            <%= link_to "Add new Issue", new_manage_issue_url, class: "btn" %>
            <%= link_to "Edit", edit_manage_issue_path(@issue), class: "btn btn-info" %>
            <%= link_to "Delete", manage_issue_path(@issue), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this post"} %>
            <%= link_to "Read", show_pdf_manage_issue_path(@issue), class: "btn btn-danger"%>
          </div>

          <a href="https://docs.google.com/gview?url=http://localhost:3000<%= @issue.mag.url %>&embedded=true">Read</a>
        </div>
      </div>

    </div>
  </div>
</div>