<%
#local
@news_letter  = subscribers_email
%>
<%= content_for(:breadcrumb) do %>
<li>
    <%= link_to "Dashboard", master_root_url %>
    <span class="icon-angle-right"></span>
</li>
<li>
    <%= link_to_unless_current "News Letters", master_subscribers_emails_path %>
    <span class="icon-angle-right"></span>
</li>
<% end %>

<%= content_for(:page_title) do %>
<%= @news_letter.title %>
<% end %>


<div class="row-fluid">
    <div class="offset2 span8">
        <div class="media social-box">
            <div class="header">
                <div class="btn-group hidden-phone">
                    <%= link_to "Create news letter", new_master_subscribers_email_path, class: "btn" %>
                    <%= link_to "Send News Letter", send_now_master_subscribers_email_path(@news_letter), class: "btn btn-warning", method: :post %>
                    <%= link_to "Edit", edit_master_subscribers_email_path(@news_letter), class: "btn btn-info" %>
                    <%= link_to "Delete", master_subscribers_email_path(@news_letter), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this news letter"} %>

                </div>
            </div>
            <div class="media-body social-body">
                <div class="body">
                    <%= raw @news_letter.body %>
                    <p><b>created: <%= @news_letter.created_at.to_date.to_s(:long) %></b></p>
                    <div>
                        <%= link_to "Send News Letter", send_now_master_subscribers_email_path(@news_letter), class: "btn btn-warning", method: :post %>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>