<div id="blog_show" class="row-fluid" >

  <div class="span12">

    <section>

      <header>
        <h1 style="border-bottom: none;">
          Forgot your password?
        </h1>
      </header>

      <div  class="cover_container ">


        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: {class:"form-horizontal", :method => :post}) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, :required => true, :autofocus => true, input_html: {class: "span9"}  %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Send me reset password instructions" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>






    </section>
  </div>

</div>



