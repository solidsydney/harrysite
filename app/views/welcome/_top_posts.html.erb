<article class="span3 mid box" style="margin-left: 20px;">
  <div class="img">
    <%= link_to image_tag(post.post_image(:th_new)), post %>
  </div>
  <div class="info">
    <p class="tags">
      <%= raw post.categories.first(2).map { |tag| link_to tag.name, category_path(tag) }.join(" ") %>
    </p>
    <h1><%= link_to truncate(post.title, length: 50, omission: ".."), post, title: post.title %></h1>
    <p class="text">
      <%= truncate post.summary, length: 65 %>
    </p>
  </div>

</article>