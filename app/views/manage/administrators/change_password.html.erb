


<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", manage_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to "Manage Categories", manage_categories_path %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Change Password
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Change Password</h4>
      </div>
      <div class="body">
        <%= form_for @user, url: change_my_password_manage_administrator_path(@user), html: {class: "form-horizontal", method: :put} do |f| %>
            <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from completing:</h2>
                  <ul>
                    <% @user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
            <div class="row-fluid">
              <div class="span12">
                <fieldset>
                  <div class="control-group formSep">
                    <%= f.label :current_password, class: "control-label" %>
                    <div class="controls">
                      <%= f.password_field :current_password, class: "input-xlarge" %>
                      <p class="help-block">We need your current password to confirm your changes</p>
                    </div>
                  </div>
                  <div class="control-group formSep">
                    <%= f.label :password, "New Password", class: "control-label" %>
                    <div class="controls">
                      <%= f.password_field :password, class: "input-xlarge" %>
                    </div>
                  </div>
                  <div class="control-group formSep">
                    <%= f.label :password_confirmation, class: "control-label" %>
                    <div class="controls">
                      <%= f.password_field :password_confirmation, class: "input-xlarge" %>
                    </div>
                  </div>
                  <div class="control-group">
                    <div class="controls">
                      <%= f.submit "Change Password", class: "btn btn-gebo" %>
                      <%= link_to "Cancel", manage_administrator_path(current_user), class: "btn" %>
                    </div>
                  </div>
                </fieldset>
              </div>
            </div>
        <% end %>

      </div>
    </div>
  </div>
</div>




